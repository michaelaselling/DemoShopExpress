<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/vitBakgrund"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/exitButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:clickable="true"
            android:minHeight="40dp"
            android:minWidth="100dp"
            android:onClick="onExitClick"
            android:text="Avbryt"
            android:textAllCaps="false"
            android:textColor="#39ac39"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/grey"
            android:layout_width="400dp"
            android:layout_height="450dp"
            android:background="#b3e6b3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/exitButton"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/checkList"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:layout_above="@+id/varukorg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/listName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min inkÃ¶pslista"
            android:textColor="#737373"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_below="@+id/checkList"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/checkProducts"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:layout_alignTop="@+id/grey"
            android:layout_toEndOf="@+id/checkList"
            android:layout_toRightOf="@+id/checkList"
            android:background="#e6ffe6"
            android:clickable="true"
            android:onClick="onCheckProductsClick" />

        <TextView
            android:id="@+id/varukorg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Varukorg"
            android:textColor="#737373"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_alignBottom="@+id/checkProducts"
            android:layout_toRightOf="@+id/skanna"
            android:layout_toEndOf="@+id/skanna" />

        <TextView
            android:id="@+id/p1"
            android:layout_width="150sp"
            android:layout_height="25sp"
            android:layout_marginTop="22dp"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/listName"
            android:layout_alignLeft="@+id/listName"
            android:layout_alignStart="@+id/listName" />

        <TextView
            android:id="@+id/p2"
            android:layout_width="150sp"
            android:layout_height="25sp"
            android:layout_marginTop="37dp"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/p1"
            android:layout_alignLeft="@+id/p1"
            android:layout_alignStart="@+id/p1" />

        <TextView
            android:id="@+id/p3"
            android:layout_width="150sp"
            android:layout_height="25sp"
            android:layout_marginTop="36dp"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/p2"
            android:layout_alignLeft="@+id/p2"
            android:layout_alignStart="@+id/p2" />

        <TextView
            android:id="@+id/p4"
            android:layout_width="150sp"
            android:layout_height="25sp"
            android:layout_marginTop="38dp"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/p3"
            android:layout_alignLeft="@+id/p3"
            android:layout_alignStart="@+id/p3" />

        <TextView
            android:id="@+id/p5"
            android:layout_width="150sp"
            android:layout_height="25sp"
            android:layout_marginTop="37dp"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/p4"
            android:layout_alignLeft="@+id/p4"
            android:layout_alignStart="@+id/p4" />

        <TextView
            android:id="@+id/p6"
            android:layout_width="150sp"
            android:layout_height="25sp"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/p5"
            android:layout_alignLeft="@+id/p5"
            android:layout_alignStart="@+id/p5"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/p7"
            android:layout_width="150sp"
            android:layout_height="25sp"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/p1"
            android:layout_alignBottom="@+id/p1"
            android:layout_alignLeft="@+id/checkProducts"
            android:layout_alignStart="@+id/checkProducts" />

        <TextView
            android:id="@+id/p8"
            android:layout_width="150sp"
            android:layout_height="25sp"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/p2"
            android:layout_alignBottom="@+id/p2"
            android:layout_alignLeft="@+id/checkProducts"
            android:layout_alignStart="@+id/checkProducts" />

        <TextView
            android:id="@+id/p9"
            android:layout_width="150sp"
            android:layout_height="25sp"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/p3"
            android:layout_alignBottom="@+id/p3"
            android:layout_alignLeft="@+id/p8"
            android:layout_alignStart="@+id/p8" />

        <TextView
            android:id="@+id/p10"
            android:layout_width="150sp"
            android:layout_height="25sp"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/p4"
            android:layout_alignBottom="@+id/p4"
            android:layout_alignLeft="@+id/p9"
            android:layout_alignStart="@+id/p9" />

        <TextView
            android:id="@+id/p11"
            android:layout_width="150sp"
            android:layout_height="25sp"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/p5"
            android:layout_alignBottom="@+id/p5"
            android:layout_alignLeft="@+id/p10"
            android:layout_alignStart="@+id/p10" />

        <TextView
            android:id="@+id/p12"
            android:layout_width="150sp"
            android:layout_height="25sp"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/p6"
            android:layout_alignBottom="@+id/p6"
            android:layout_alignLeft="@+id/p11"
            android:layout_alignStart="@+id/p11" />

        <ImageView
            android:id="@+id/skanna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/scanna"
            android:clickable="true"
            android:onClick="onSkannaVaraClick"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp" />

    </RelativeLayout>

</FrameLayout>