<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/vitBakgrund"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/backButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:clickable="true"
            android:minHeight="40dp"
            android:minWidth="100dp"
            android:onClick="onBackClick"
            android:text="Tillbaka"
            android:textAllCaps="false"
            android:textColor="#39ac39"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/backButton"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:text="Inköpslista_3"
            android:textColor="#39ac39"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bakgrundLjus"
            android:layout_width="400dp"
            android:layout_height="450dp"
            android:background="#000000"
            android:backgroundTint="#b3e6b3"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/shoppingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:background="#39ac39"
            android:text="Börja handla"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:clickable="true"
            android:onClick="onShoppingClick"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dela"
            android:layout_above="@+id/bakgrundLjus"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="onShareClick"
            android:clickable="true"/>

        <TextView
            android:id="@+id/pasta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="21dp"
            android:text="- Pasta"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/skinka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pasta"
            android:layout_alignStart="@+id/pasta"
            android:layout_below="@+id/pasta"
            android:layout_marginTop="17dp"
            android:text="- Skinka"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/fetaost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/skinka"
            android:layout_alignStart="@+id/skinka"
            android:layout_below="@+id/skinka"
            android:layout_marginTop="16dp"
            android:text="- Fetaost"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cremefraiche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fetaost"
            android:layout_alignStart="@+id/fetaost"
            android:layout_below="@+id/fetaost"
            android:layout_marginTop="18dp"
            android:text="- Crème fraiche"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/sallad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cremefraiche"
            android:layout_alignStart="@+id/cremefraiche"
            android:layout_below="@+id/cremefraiche"
            android:layout_marginTop="20dp"
            android:text="- Sallad"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/baguette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="- Baguette"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/sallad"
            android:layout_alignLeft="@+id/sallad"
            android:layout_alignStart="@+id/sallad" />

        <TextView
            android:id="@+id/fanta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/baguette"
            android:layout_alignStart="@+id/baguette"
            android:layout_below="@+id/baguette"
            android:layout_marginTop="17dp"
            android:text="- Fanta"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/edit"
            app:srcCompat="@drawable/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="39dip"
            android:scaleType="centerCrop"
            android:adjustViewBounds ="true"
            android:layout_marginBottom="16dp"
            android:layout_above="@+id/bakgrundLjus"
            android:layout_toLeftOf="@+id/share"
            android:layout_toStartOf="@+id/share"
            android:clickable="true"
            android:onClick="onEditClick"/>

    </RelativeLayout>

</FrameLayout>