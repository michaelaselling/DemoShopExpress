            android:layout_height="wrap_content"
            android:text="0kr"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/rabatt"
            android:layout_alignBottom="@+id/rabatt"
